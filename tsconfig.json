{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6",
      "es7",
      "es2017"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "module": "esnext",
    "outDir": "lib",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "pretty": true,
    "noEmit": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
